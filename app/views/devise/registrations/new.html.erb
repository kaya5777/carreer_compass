<div class="max-w-md mx-auto mt-8">
  <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100">
    <h2 class="text-2xl font-bold text-gray-900 text-center mb-6">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-4") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :display_name, "表示名", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :display_name, autofocus: true, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "例: 山田太郎" %>
      </div>

      <div>
        <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autocomplete: "email", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        <p class="text-xs text-gray-500 mt-1"><%= @minimum_password_length %>文字以上</p>
      </div>

      <div>
        <%= f.label :password_confirmation, "パスワード（確認）", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= f.submit "登録する", class: "w-full bg-indigo-600 text-white py-2 rounded-lg font-medium hover:bg-indigo-700 cursor-pointer" %>
      </div>
    <% end %>

    <div class="mt-6 text-center space-y-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
