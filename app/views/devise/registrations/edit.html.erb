<div class="max-w-md mx-auto mt-8">
  <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100">
    <h2 class="text-2xl font-bold text-gray-900 text-center mb-6">アカウント編集</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :display_name, "表示名", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :display_name, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autocomplete: "email", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= f.label :password, "新しいパスワード", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        <p class="text-xs text-gray-500 mt-1">変更しない場合は空欄にしてください</p>
      </div>

      <div>
        <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= f.label :current_password, "現在のパスワード", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        <p class="text-xs text-gray-500 mt-1">変更を保存するには現在のパスワードが必要です</p>
      </div>

      <div>
        <%= f.submit "更新する", class: "w-full bg-indigo-600 text-white py-2 rounded-lg font-medium hover:bg-indigo-700 cursor-pointer" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= link_to "戻る", :back, class: "text-sm text-gray-600 hover:text-indigo-600" %>
    </div>
  </div>
</div>
