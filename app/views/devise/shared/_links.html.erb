<%- if controller_name != 'sessions' %>
  <%= link_to "ログインはこちら", new_session_path(resource_name), class: "block text-sm text-indigo-600 hover:text-indigo-800" %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "block text-sm text-indigo-600 hover:text-indigo-800" %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードを忘れた方", new_password_path(resource_name), class: "block text-sm text-indigo-600 hover:text-indigo-800" %>
<% end %>
