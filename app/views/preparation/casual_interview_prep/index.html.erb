<div class="max-w-4xl mx-auto">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">カジュアル面談対策</h1>
  <p class="text-gray-600 mb-8">カジュアル面談に向けた準備をAIがサポートします。</p>

  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">面談対策を開始</h2>
    <% if @interview_preps.any? %>
      <div class="space-y-3 mb-4">
        <% @interview_preps.each do |prep| %>
          <div class="flex justify-between items-center p-3 border border-gray-100 rounded-lg">
            <span class="font-medium text-gray-700"><%= prep.company_name %></span>
            <%= button_to "対策開始", preparation_casual_interview_prep_index_path(interview_prep_id: prep.id), class: "bg-pink-600 text-white px-4 py-1.5 rounded-lg text-sm hover:bg-pink-700" %>
          </div>
        <% end %>
      </div>
    <% end %>
    <%= button_to "企業未指定で開始", preparation_casual_interview_prep_index_path, class: "bg-gray-100 text-gray-700 px-4 py-2 rounded-lg text-sm hover:bg-gray-200 font-medium" %>
  </div>

  <% if @sessions.any? %>
    <h2 class="text-lg font-semibold text-gray-900 mb-4">過去のセッション</h2>
    <div class="space-y-3">
      <% @sessions.each do |session| %>
        <%= link_to preparation_casual_interview_prep_path(session), class: "block bg-white p-4 rounded-lg shadow-sm border border-gray-100 hover:border-pink-200" do %>
          <p class="font-medium text-gray-900"><%= session.title %></p>
          <p class="text-sm text-gray-500"><%= session.updated_at.strftime("%Y/%m/%d %H:%M") %></p>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
